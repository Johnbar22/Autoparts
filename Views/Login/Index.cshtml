@model LoginModel
@{
    ViewData["Title"] = "Вход/Регистрация";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/logregstyle.css" />

<body class="bg-dark">
    <div class="container">
        <div class="container d-flex justify-content-center align-items-center mt-5">
            <div class="col-md-offset-3 col-md-6">
                <div class="form-horizontal" style="padding-bottom: 10px;">
                    <span class="heading">Авторизация</span>
                    <div class="form-group">
                        <label asp-for="@Model.Login" class="control-label"></label>
                        <input asp-for="@Model.Login" class="form-control" id="Login" placeholder="Example@rambler.com" required />
                        <span id="LoginError" class="text-danger"></span>
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <label asp-for="@Model.Password" class="control-label"></label>
                        <input asp-for="@Model.Password" class="form-control" id="Password" placeholder="Password" required />
                        <span id="PasswordError" class="text-danger"></span>
                        <i class="fa fa-lock"></i>
                    </div>
                    <div class="form-group" style="display:flex; justify-content: space-between;">
                        <input type="submit" id="loginButton" value="Войти" class="btn btn-info" />
                        <a href="@Url.Action("Index", "Registration")" class="btn btn-outline-warning cre-acc  me-2"> Создать аккаунт </a>
                    </div>
                    <div class="no-acc text-center mt-2">
                    </div>
                </div>
                <!-- Кнопка для восстановления пароля -->
                <a href="#" data-toggle="modal" class="btn btn-primary my-2" data-target="#forgotPasswordModal" style="border-radius:30px">Забыли пароль?</a>
            </div>
        </div>
    </div>


    <!-- Модальное окно для сброса пароля -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Восстановление пароля</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="forgotPasswordForm">
                        <div class="form-group">
                            <label for="email">Введите ваш email</label>
                            <input type="email" class="form-control" id="email" placeholder="Ваш email">
                        </div>
                        <button type="button" class="btn btn-primary my-2" id="sendResetLink">Отправить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay -->
    <!-- // Блокируем экран во время обновления БД-->
    <div class="overlay" aria-hidden="true"></div>
    <div class="spinner" aria-hidden="true">
        <div class="spinner-border text-light" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <script src="~/js/loginindexscript.js" defer></script>
    @* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

